@model loginwawaky.DataModel.Cursos

@{
    ViewBag.Title = "Create Course";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/createcurso.css" rel="stylesheet">

<div class="form-container">
    <h2>Crear Curso</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(model => model.Paralelo, htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.EditorFor(model => model.Paralelo, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Paralelo, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.fechaInicio, htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.TextBoxFor(model => model.fechaInicio, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "date" })
                    @Html.ValidationMessageFor(model => model.fechaInicio, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.fechaFin, htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.TextBoxFor(model => model.fechaFin, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "date" })
                    @Html.ValidationMessageFor(model => model.fechaFin, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.idDocente, "Docente", htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.DropDownList("idDocente", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.idDocente, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group" style="width: 100%; padding-top: 20px;">
                <div>
                    <input type="submit" value="Create" class="btn-submit" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-link" })
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
