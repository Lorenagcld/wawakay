@model loginwawaky.DataModel.Cursos

@{
    ViewBag.Title = "Detalles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/detallecurso.css" rel="stylesheet">


<div class="details-container">
    <h2>Detalle Curso</h2>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.idCurso)</dt>
        <dd>@Html.DisplayFor(model => model.idCurso)</dd>

        <dt>@Html.DisplayNameFor(model => model.Paralelo)</dt>
        <dd>@Html.DisplayFor(model => model.Paralelo)</dd>

        <dt>@Html.DisplayNameFor(model => model.fechaInicio)</dt>
        <dd>@Html.DisplayFor(model => model.fechaInicio)</dd>

        <dt>@Html.DisplayNameFor(model => model.fechaFin)</dt>
        <dd>@Html.DisplayFor(model => model.fechaFin)</dd>

        <dt>@Html.DisplayNameFor(model => model.estadoC)</dt>
        <dd>@Html.DisplayFor(model => model.estadoC)</dd>

        <dt>@Html.DisplayNameFor(model => model.Docente.NombresDocente)</dt>
        <dd>@Html.DisplayFor(model => model.Docente.NombresDocente)</dd>
    </dl>

    <p class="text-center">
        @Html.ActionLink("Editar", "Edit", new { id = Model.idCurso }, new { @class = "btn-link" }) |
        @Html.ActionLink("Volver a la lista", "Index", null, new { @class = "btn-link" })
    </p>
</div>
