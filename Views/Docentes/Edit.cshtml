@model loginwawaky.DataModel.Docente

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/editalumno.css" rel="stylesheet">

<div class="form-container">
    <h2>Editar Docente</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.idDocente)

            <div class="form-group">
                @Html.LabelFor(model => model.idDocente, htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.EditorFor(model => model.idDocente, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.idDocente, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.NombresDocente, htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.EditorFor(model => model.NombresDocente, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NombresDocente, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.CedulaDocente, htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.EditorFor(model => model.CedulaDocente, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CedulaDocente, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.TelefonoDocente, htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.EditorFor(model => model.TelefonoDocente, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TelefonoDocente, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.EmailDocente, htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.EditorFor(model => model.EmailDocente, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.EmailDocente, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.estadoD, htmlAttributes: new { @class = "control-label" })
                <div>
                    <div class="checkbox">
                        @Html.EditorFor(model => model.estadoD)
                        @Html.ValidationMessageFor(model => model.estadoD, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div>
                    <input type="submit" value="Guardar" class="btn-submit" />
                </div>
            </div>
        </div>
    }
</div>

<div>
    @Html.ActionLink("Volver a la Lista", "Index", null, new { @class = "btn btn-link" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
