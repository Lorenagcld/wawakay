                    @Html.EditorFor(model => model.CedulaDocente, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CedulaDocente, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.TelefonoDocente, htmlAttributes: new { @class = "control-label" })
