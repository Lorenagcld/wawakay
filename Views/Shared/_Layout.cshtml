<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GuaguaKay</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>
<body>
    @if (Request.IsAuthenticated)
    {
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container">
                <a href="@Url.Action("Index", "Home", new { area = "" })" class="navbar-brand mx-auto">
                    <img src="~/Content/img/logoWawaKay.png" alt="WawaKay" class="img-fluid custom-img" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                @Html.Partial("_LoginPartial")
            </div>
        </nav>

        <div class="container-fluid body-content">
            <div class="row">
                <div class="col-md-3">
                    <nav class="sidebar close">
                        <header>
                            <div class="image-text">
                                <span class="image">
                                    <img src="~/Content/img/logoInstitucion.png" alt="" class="img-fluid">
                                </span>
                                <div class="text logo-text">
                                    <span class="name"></span>
                                    <strong><span class="profession">Wawakay</span></strong>
                                </div>
                            </div>
                            <i class='bx bx-chevron-right toggle'></i>
                        </header>
                        <div class="menu-bar">
                            <div class="menu">
                                <ul class="menu-links">
                                    <li class="nav-link">
                                        <i class="fas fa-users"></i>
                                        @Html.ActionLink("Alumnos", "Index", "Alumnos", new { area = "" }, new { @class = "nav-item custom-nav-item" })
                                    </li>
                                    <li class="nav-link">
                                        <i class="fas fa-user-plus"></i>
                                        @Html.ActionLink("Representantes", "Index", "Representantes1", new { area = "" }, new { @class = "nav-item custom-nav-item" })
                                    </li>
                                    <li class="nav-link">
                                        <i class="fas fa-file-invoice-dollar"></i>
                                        @Html.ActionLink("Docentes", "Index", "Docentes", new { area = "" }, new { @class = "nav-item custom-nav-item" })
                                    </li>
                                    <li class="nav-link">
                                        <i class="fas fa-list"></i>
                                        @Html.ActionLink("Cursos", "Index", "Cursos", new { area = "" }, new { @class = "nav-item custom-nav-item" })
                                    </li>
                                    <li class="nav-link">
                                        <i class="fas fa-file-invoice-dollar"></i>
                                        @Html.ActionLink("Matriculas", "Index", "Matriculas", new { area = "" }, new { @class = "nav-item custom-nav-item" })
                                    </li>
                                    <li class="nav-link">
                                        <i class="fas fa-file-invoice-dollar"></i>
                                        @Html.ActionLink("Asistencias", "Index", "Asistencias", new { area = "" }, new { @class = "nav-item custom-nav-item" })
                                    </li>
                                    <li class="nav-link">
                                        <i class="fas fa-file-invoice-dollar"></i>
                                        @Html.ActionLink("Notas", "Index", "Deberes", new { area = "" }, new { @class = "nav-item custom-nav-item" })
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </nav>
                </div>
                <div class="col-md-9">
                    @RenderBody()
                </div>
            </div>
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - ITQ</p>
            </footer>
        </div>
    }
    else
    {
        

        <div class="container body-content">
            @RenderBody()
            <hr />
        </div>
    }

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/customjs")
    @RenderSection("scripts", required: false)

    <!-- Bootstrap Bundle JS (incluye Popper) -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
</body>
</html>
